<div class="header">
  <div class="container">
    <!--
    <img src="http://to_whatever_website/image_filename.jpg" width="80">
    -->
     
    <%= image_tag "bucket_logo.png" %>
    <h1>Bucklist Travel</h1>
  </div>
</div>

<div class="tags">
  <div class="container">
    <div class="cards row">
    	<% @tags.each do |t| %>
      <div class="card col-xs-4">
        <%= image_tag t.image %>
        <h2><%= t.title %></h2>
        <%= link_to "Learn more", tag_path(t) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
